--- 
import BaseLayout from '../layouts/BaseLayout.astro';

const allPosts = await Astro.glob('/src/pages/posts/*.md');

const {frontmatter} = Astro.props;
---


<BaseLayout pageName={frontmatter.title}>

    <h1>{frontmatter.title}</h1>
    <p>{frontmatter.date}</p>
    <img src={frontmatter.teaser} alt={frontmatter.title} />
    <slot />

    <h2>All Posts</h2>

    <ul>
    {
        allPosts.map((post) => (
            <li><a href={post.url}>{post.frontmatter.title}</a></li>
        ))
    }
    </ul>
</BaseLayout>